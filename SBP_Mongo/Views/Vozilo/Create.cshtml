@model SBP_Mongo.Models.Vozilo

@{
    ViewData["Title"] = "Create Vozilo";
}
<br/>
<h2 class="text-info">Create</h2>
<br/>
<h4>Vozilo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ModelVozila" class="control-label">Model vozila</label>
                <select asp-for="ModelVozila" class="form-control" required>
                    @foreach (var vozilo in ViewBag.Model)
                    {
                        <option value="@vozilo.Naziv">@vozilo.Naziv</option>
                    }
                </select>
                <span asp-validation-for="ModelVozila" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <label asp-for="BrojSasije" class="control-label">Broj šasije</label>
                <input asp-for="BrojSasije" class="form-control" />
                <span asp-validation-for="BrojSasije" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <label asp-for="RegistracijskaOznaka" class="control-label">Registracijska oznaka</label>
                <input asp-for="RegistracijskaOznaka" class="form-control" />
                <span asp-validation-for="RegistracijskaOznaka" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <label asp-for="GodinaProizvodnje" class="control-label">Godina proizvodnje</label>
                <input asp-for="GodinaProizvodnje" class="form-control" />
                <span asp-validation-for="GodinaProizvodnje" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <label asp-for="VrstaVozila" class="control-label">Vrsta vozila</label>
                <select asp-for="VrstaVozila" class="form-control" required>
                    @foreach (var vrsta in ViewBag.Vrsta)
                    {
                        <option value="@vrsta.Naziv">@vrsta.Naziv</option>
                    }
                </select>
                <span asp-validation-for="VrstaVozila" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <label asp-for="IdLokacije" class="control-label">Lokacija</label>
                <select asp-for="IdLokacije" class="form-control" required>
                    @foreach (var lokacija in ViewBag.Lokacija)
                    {
                        <option value="@lokacija.Naziv">@lokacija.Naziv</option>
                    }
                </select>
                <span asp-validation-for="IdLokacije" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <label asp-for="Gorivo" class="control-label"></label>
                <input asp-for="Gorivo" class="form-control" />
                <span asp-validation-for="Gorivo" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-primary" fdprocessedid="v1udt9" />
                <a asp-action="Index" class=" btn btn-outline-light" fdprocessedid="brqypi">Back to List</a>
            </div>
        </form>
    </div>
</div>
<br/>


