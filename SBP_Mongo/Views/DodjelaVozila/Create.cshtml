@model SBP_Mongo.Models.DodjelaVozila

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>DodjelaVozila</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Id" class="form-control" hidden/>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Uposlenik" class="control-label"></label>
                <select asp-for="Uposlenik" class="form-control">
                    <option value=""> </option>
                    @foreach (var uposlenik in ViewBag.Uposlenik)
                    {
                        <option value="@uposlenik.Id">@uposlenik.Ime @uposlenik.Prezime</option>
                    }
                </select>
                <span asp-validation-for="Uposlenik" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vozilo" class="control-label"></label>
                <select asp-for="Vozilo" class="form-control">
                    <option value=""> </option>
                    @foreach (var vozilo in ViewBag.Vozilo)
                    {
                        <option value="@vozilo.Id">@vozilo.ModelVozila @vozilo.RegistracijskaOznaka</option>
                    }
                </select>
                <span asp-validation-for="Vozilo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dodjeljeno" class="control-label"></label>
                <input asp-for="Dodjeljeno" class="form-control" />
                <span asp-validation-for="Dodjeljeno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VratitiDo" class="control-label"></label>
                <input asp-for="VratitiDo" class="form-control" />
                <span asp-validation-for="VratitiDo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

